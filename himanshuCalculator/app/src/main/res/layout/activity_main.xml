<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFEAF5"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#BFEAF5"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:background="#E9F8F9"
            android:textColor="#181D31"
            android:id="@+id/input_tv"
            android:textSize="55sp"
            android:paddingRight="13dp"
            android:textAlignment="textEnd"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/output_tv"
            android:textColor="#181D31"
            android:hint="0"
            android:paddingRight="13dp"
            android:background="#E3F6FF"
            android:textSize="65sp"

            android:textAlignment="textEnd"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#DEFCF9"
            android:layout_alignParentBottom="true">

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:layout_margin="8dp"
                android:text="C"
                android:id="@+id/btnClear"
                android:textSize="40sp"
                android:backgroundTint="#4E6E81"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:text="("
                android:textSize="40sp"
                android:id="@+id/btnOpenParenthsis"
                android:layout_margin="8dp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:text=")"
                android:textStyle=""
                android:textSize="40sp"
                android:id="@+id/btnCloseParenthsis"
                android:layout_margin="8dp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:text="/"
                android:id="@+id/btnDivide"
                android:textSize="40sp"
                android:layout_margin="8dp"
                android:backgroundTint="#609966"
                app:cornerRadius="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DEFCF9"
            android:gravity="center"
            android:layout_alignParentBottom="true">

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:layout_margin="8dp"
                android:text="7"
                android:id="@+id/btn7"
                android:textSize="40sp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:text="8"
                android:textSize="40sp"
                android:id="@+id/btn8"
                android:layout_margin="8dp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:layout_margin="8dp"
                android:id="@+id/btn9"
                android:text="9"
                android:textSize="40sp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:text="*"
                android:id="@+id/btnMul"
                android:textSize="40sp"
                android:layout_margin="8dp"
                android:backgroundTint="#609966"
                app:cornerRadius="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#DEFCF9"
            android:layout_alignParentBottom="true">

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:text="4"
                android:id="@+id/btn4"
                android:textSize="40sp"
                android:layout_margin="8dp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:text="5"
                android:textSize="40sp"
                android:id="@+id/btn5"
                android:layout_margin="8dp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:text="6"
                android:id="@+id/btn6"
                android:textSize="40sp"
                android:layout_margin="8dp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:text="+"
                android:id="@+id/btnAdd"
                android:textSize="40sp"
                android:layout_margin="8dp"
                android:backgroundTint="#609966"
                app:cornerRadius="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#DEFCF9"
            android:layout_alignParentBottom="true">

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:layout_margin="8dp"
                android:text="1"
                android:id="@+id/btn1"
                android:textSize="40sp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:layout_margin="8dp"
                android:text="2"
                android:id="@+id/btn2"
                android:textSize="40sp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:layout_margin="8dp"
                android:text="3"
                android:id="@+id/btn3"
                android:textSize="40sp"
                android:backgroundTint="#3795BD"
                app:cornerRadius="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:layout_margin="8dp"
                android:id="@+id/btnSub"
                android:text="-"
                android:textSize="40sp"
                android:backgroundTint="#609966"
                app:cornerRadius="40dp"/>

        </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#DEFCF9"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            android:layout_width="75dp"
            android:layout_height="85dp"
            android:layout_margin="8dp"
            android:text="AC"
            android:id="@+id/btnAC"
            android:textSize="23sp"
            android:backgroundTint="#4E6E81"
            app:cornerRadius="40dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="75dp"
            android:layout_height="85dp"
            android:text="0"
            android:id="@+id/btn0"
            android:textSize="40sp"
            android:layout_margin="8dp"
            android:backgroundTint="#3795BD"
            app:cornerRadius="40dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="75dp"
            android:layout_height="85dp"
            android:layout_margin="8dp"
            android:text="."
            android:id="@+id/btnDot"
            android:textSize="40sp"
            android:backgroundTint="#3795BD"
            app:cornerRadius="40dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="75dp"
            android:layout_height="85dp"
            android:layout_margin="8dp"
            android:text="="
            android:id="@+id/btnEquals"
            android:textSize="40sp"
            android:backgroundTint="#609966"
            app:cornerRadius="40dp"/>

    </LinearLayout>

    </LinearLayout>





  </RelativeLayout>