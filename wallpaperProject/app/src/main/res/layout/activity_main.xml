<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:hint="Search Wallpaper Here..."
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:imeOptions="actionSearch"
            android:layout_marginTop="9dp"
            android:background="@drawable/edttxt_bg_gradient"
            android:textStyle="bold"
            android:paddingTop="4dp"

            android:padding="9dp"/>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="1dp"
            android:id="@+id/imgsearch"
            android:layout_marginTop="11dp"
            android:src="@drawable/baseline_search_24"
            app:tint="#F6F6F6"
            android:layout_marginLeft="-50dp">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/nature"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_marginRight="19dp"
                app:cardCornerRadius="9dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="7dp"
                    android:paddingTop="9dp"
                    android:background="@drawable/gradient_nature"
                    android:text="Nature"
                    android:paddingEnd="13dp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textColor="#EEEEEE">
                </TextView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:src="@drawable/nature">
                </ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cars"
                android:layout_width="170dp"
                android:layout_height="55dp"
                app:cardCornerRadius="9dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="7dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="13dp"
                    android:background="@drawable/gradient_car"
                    android:text="Cars"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textColor="#EEEEEE">
                </TextView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:paddingLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/cars">
                </ImageView>

            </androidx.cardview.widget.CardView>



        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/anime"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_marginRight="19dp"
                app:cardCornerRadius="9dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="7dp"
                    android:paddingTop="9dp"
                    android:background="@drawable/gradient_anime"
                    android:text="Anime"
                    android:paddingEnd="13dp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textColor="#EEEEEE">
                </TextView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:src="@drawable/anime">
                </ImageView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/trending"
                android:layout_width="170dp"
                android:layout_height="55dp"
                app:cardCornerRadius="9dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="7dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/gradient_trending"
                    android:text="Trending"
                    android:paddingEnd="13dp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textColor="#EEEEEE">
                </TextView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:src="@drawable/trending">
                </ImageView>


            </androidx.cardview.widget.CardView>




        </LinearLayout>




    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:id="@+id/recyclerView">
    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>