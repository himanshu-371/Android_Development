<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalWallpaper">

    <ImageView
        android:id="@+id/finalWallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/final_wallpaper"
        android:background="@drawable/bg"
        android:scaleType="centerCrop">
    </ImageView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp">

        <ImageView
            android:id="@+id/btnDownload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="85dp"
            android:contentDescription="@string/saved_wallpaper"
            android:background="@drawable/savedwp" />

        <ImageView
            android:id="@+id/btnSetWallpaper"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/apply_wallpaper"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="85dp"
            android:background="@drawable/applywp"/>

    </RelativeLayout>

</RelativeLayout>